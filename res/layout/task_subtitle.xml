<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <View
        android:id="@+id/item_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/marginTopDivider"
        android:layout_marginTop="@dimen/marginTopDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/task_padding" >

        <TextView
            android:id="@+id/task_subtitle"
            style="@style/taskViewCaption"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/task_padding"
            android:textIsSelectable="false" />

        <ImageButton
            android:id="@+id/task_subtitle_audio_button"
            android:layout_width="@dimen/button_quadratic"
            android:layout_height="@dimen/button_quadratic"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/edit"
            android:src="@android:drawable/ic_btn_speak_now" />

        <ImageButton
            android:id="@+id/task_subtitle_camera_button"
            android:layout_width="@dimen/button_quadratic"
            android:layout_height="@dimen/button_quadratic"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/edit"
            android:src="@android:drawable/ic_menu_camera" />

        <ImageButton
            android:id="@+id/task_subtitle_button"
            android:layout_width="@dimen/button_quadratic"
            android:layout_height="@dimen/button_quadratic"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/edit"
            android:paddingEnd="-2dp"
            android:src="@android:drawable/ic_menu_add" />
    </RelativeLayout>

</LinearLayout>