<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/time_dialog_head"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center" >

    <View
        android:id="@+id/center_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:importantForAccessibility="no"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/hour_space"
        style="@style/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/separator"
        android:importantForAccessibility="no"
        android:text="@string/time_placeholder"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/hour_space"
        android:layout_alignStart="@+id/hour_space"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/extra_time_label_margin"
        android:layout_marginStart="@dimen/extra_time_label_margin" >

        <com.sleepbot.datetimepicker.AccessibleTextView
            android:id="@+id/hours"
            style="@style/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/time_placeholder"
            android:textColor="@color/blue" />
    </FrameLayout>

    <TextView
        android:id="@+id/separator"
        style="@style/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/center_view"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        android:paddingEnd="@dimen/separator_padding"
        android:paddingStart="@dimen/separator_padding"
        android:text="@string/time_separator" />

    <TextView
        android:id="@+id/minutes_space"
        style="@style/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/separator"
        android:importantForAccessibility="no"
        android:text="@string/time_placeholder"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/minutes_space"
        android:layout_alignStart="@+id/minutes_space"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/extra_time_label_margin"
        android:layout_marginStart="@dimen/extra_time_label_margin" >

        <com.sleepbot.datetimepicker.AccessibleTextView
            android:id="@+id/minutes"
            style="@style/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/time_placeholder" />
    </FrameLayout>

    <com.sleepbot.datetimepicker.AccessibleTextView
        android:id="@+id/ampm_hitspace"
        android:layout_width="@dimen/ampm_label_size"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ampm_label"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ampm_label" />

    <TextView
        android:id="@+id/ampm_label"
        style="@style/ampm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/separator"
        android:layout_toEndOf="@+id/minutes_space"
        android:importantForAccessibility="no"
        android:paddingEnd="@dimen/ampm_left_padding"
        android:paddingStart="@dimen/ampm_left_padding"
        android:text="@string/time_placeholder" />

</RelativeLayout>